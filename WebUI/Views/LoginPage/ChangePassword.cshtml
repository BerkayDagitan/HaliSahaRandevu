@model ChangePasswordDTO

<div class="container full-page-center">
    <div class="card fade-in">
        <h3>🔑 Şifre Değiştir</h3>

        @if (TempData["ErrorChangePassword"] != null)
        {
            <div class="alert alert-danger">
                @TempData["ErrorChangePassword"]
            </div>
        }

        <form asp-action="ChangePassword" asp-controller="LoginPage" method="post">
            <div class="form-group mb-3">
                <label for="CurrentPassword" class="form-label">Mevcut Şifre</label>
                <div class="input-group">
                    <i class="bi bi-lock-fill"></i>
                    <input id="CurrentPassword" name="CurrentPassword" type="password" class="form-control" placeholder="Mevcut şifrenizi girin" />
                </div>
                <span asp-validation-for="CurrentPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="NewPassword" class="form-label">Yeni Şifre</label>
                <div class="input-group">
                    <i class="bi bi-lock-fill"></i>
                    <input id="NewPassword" name="NewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi girin" />
                </div>
                <span asp-validation-for="NewPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="ConfirmNewPassword" class="form-label">Yeni Şifre (Tekrar)</label>
                <div class="input-group">
                    <i class="bi bi-lock-fill"></i>
                    <input id="ConfirmNewPassword" name="ConfirmNewPassword" type="password" class="form-control" placeholder="Yeni şifrenizi tekrar girin" />
                </div>
                <span asp-validation-for="ConfirmNewPassword" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Şifreyi Değiştir</button>
        </form>

        <div class="mt-3">
            <a asp-action="Home" asp-controller="HomePage" class="btn btn-secondary w-100">Ana Sayfaya Dön</a>
        </div>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #f3f4f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .full-page-center {
        height: calc(100vh - 80px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        border-radius: 12px;
        width: 400px;
        padding: 40px;
        background-color: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        opacity: 0;
    }

        .card.fade-in {
            opacity: 1;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
        }

    h3 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 24px;
        color: #2b2d42;
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #4361ee;
            box-shadow: 0 0 8px rgba(67, 97, 238, 0.2);
        }

    .text-danger {
        font-size: 14px;
    }

    .btn-login {
        background-color: #4361ee;
        color: white;
        font-weight: 600;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
        margin-top: 10px;
        box-shadow: 0 4px 6px rgba(67, 97, 238, 0.2);
    }

        .btn-login:hover {
            background-color: #3a56d4;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(67, 97, 238, 0.3);
        }

    .btn-secondary {
        background-color: #6c757d;
        color: white;
        font-weight: 600;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
    }

        .btn-secondary:hover {
            background-color: #5a6268;
            transform: translateY(-2px);
            box-shadow: 0 4px 6px rgba(108, 117, 125, 0.2);
        }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
        margin-bottom: 5px;
    }

        .input-group:hover {
            border-color: #4361ee;
        }

        .input-group i {
            color: #6c757d;
            margin-right: 10px;
        }

        .input-group input {
            border: none;
            background: transparent;
            outline: none;
            width: 100%;
            font-size: 1rem;
        }

    .alert {
        border-radius: 8px;
        margin-bottom: 20px;
    }
</style>