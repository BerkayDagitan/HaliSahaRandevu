@model UserLoginDTO

<div>
    <h3>Halı Saha Randevu Sistemine Hoş Geldiniz</h3>
</div>

<header>
    <nav class="navbar navbar-expand-sm navbar-light border-bottom box-shadow mb-3" style="background-color: transparent;">
        <div class="container d-flex justify-content-end">
            <a class="navbar-brand text-white fw-bold text-center" asp-area="" asp-controller="GirisEkrani" asp-action="GirisYap"></a>
        </div>
    </nav>
</header>

<div class="container full-page-center">
    <div class="card fade-in">
        <h3>🔐 Giriş Yap</h3>
        <form asp-action="Login" asp-controller="LoginPage" method="post" id="loginForm" style="color:gray">
            <div class="form-group mb-3">
                <label for="UserName" class="form-label">Kullanıcı Adı</label>
                <div class="input-group">
                    <i class="bi bi-person-fill"></i>
                    <input id="UserName" name="UserName" class="form-control" placeholder="Kullanıcı adınızı girin" />
                </div>
                <span id="userNameError" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <i class="bi bi-lock-fill"></i>
                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                </div>
                <span id="passwordError" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-login w-100">Giriş Yap</button>
        </form>

        <div class="divider">veya</div>

        <a asp-action="Register" asp-controller="LoginPage" class="btn btn-register w-100">🚀 Kayıt Ol</a>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #f3f4f6;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .full-page-center {
        height: calc(100vh - 80px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        border-radius: 12px;
        width: 400px;
        padding: 40px;
        background-color: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        opacity: 0;
    }

        .card.fade-in {
            opacity: 1;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
        }

    h3 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 24px;
        color: #2b2d42;
        font-weight: 600;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #4361ee;
            box-shadow: 0 0 8px rgba(67, 97, 238, 0.2);
        }

    .text-danger {
        font-size: 14px;
    }

    .btn-login {
        background-color: #4361ee;
        color: white;
        font-weight: 600;
        padding: 14px;
        border: none;
        border-radius: 8px;
        font-size: 16px;
        transition: all 0.3s ease;
        margin-top: 10px;
        box-shadow: 0 4px 6px rgba(67, 97, 238, 0.2);
    }

        .btn-login:hover {
            background-color: #3a56d4;
            transform: translateY(-2px);
            box-shadow: 0 6px 12px rgba(67, 97, 238, 0.3);
        }

    .btn-register {
        background-color: white;
        border: 2px solid #4361ee;
        color: #4361ee;
        font-weight: 600;
        padding: 14px;
        transition: all 0.3s ease;
        border-radius: 8px;
        font-size: 16px;
        margin-top: 15px;
    }

        .btn-register:hover {
            background-color: #f0f2ff;
            transform: translateY(-2px);
        }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
        margin: 20px 0;
        color: #8d99ae;
        font-size: 14px;
    }

        .divider::before,
        .divider::after {
            content: "";
            flex: 1;
            border-bottom: 1px solid #e9ecef;
        }

        .divider::before {
            margin-right: 10px;
        }

        .divider::after {
            margin-left: 10px;
        }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
        margin-bottom: 5px;
    }

        .input-group:hover {
            border-color: #4361ee;
        }

        .input-group i {
            color: #6c757d;
            margin-right: 10px;
        }

        .input-group input {
            border: none;
            background: transparent;
            outline: none;
            width: 100%;
            font-size: 1rem;
        }
</style>