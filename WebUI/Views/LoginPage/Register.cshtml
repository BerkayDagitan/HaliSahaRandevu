@model RegisterUserDTO

@if (TempData["SuccessRegister"] != null)
{
    <div class="alert alert-success">
        @TempData["SuccessRegister"]
    </div>
}

@if (TempData["ErrorRegister"] != null)
{
    <p style="color:red">@TempData["ErrorRegister"]</p>
}

<h1 class="text-center">Kayıt olmak için aşağıdaki bilgileri doldurunuz.</h1>

<div class="container full-page-center">
    <div class="card fade-in">
        <h3>🎉 Kayıt Ol</h3>

        <form asp-action="Register" asp-controller="LoginPage" method="post" novalidate>
            <div class="form-group mb-3">
                <label for="FirstName" class="form-label">Adınız</label>
                <div class="input-group">
                    <i class="bi bi-person-fill"></i>
                    <input id="FirstName" name="FirstName" class="form-control" placeholder="Adınızı girin" />
                </div>
                <span id="firstNameError" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="LastName" class="form-label">Soyadınız</label>
                <div class="input-group">
                    <i class="bi bi-person-fill"></i>
                    <input id="LastName" name="LastName" class="form-control" placeholder="Soyadınızı girin" />
                </div>
                <span id="lastNameError" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="UserName" class="form-label">Kullanıcı Adınız</label>
                <div class="input-group">
                    <i class="bi bi-person-circle"></i>
                    <input id="UserName" name="UserName" class="form-control" placeholder="Kullanıcı adınızı girin" />
                </div>
                <span id="userNameError" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label for="Password" class="form-label">Şifre</label>
                <div class="input-group">
                    <i class="bi bi-lock-fill"></i>
                    <input id="Password" name="Password" type="password" class="form-control" placeholder="Şifrenizi girin" />
                </div>
                <span id="passwordError" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-success w-100">Kayıt Ol</button>
        </form>

        <br />
        <a asp-action="Login" asp-controller="LoginPage" class="btn btn-primary w-100">Zaten hesabınız var mı? Giriş yapın</a>
    </div>
</div>

<style>
    html, body {
        height: 100%;
        margin: 0;
        background-color: #f3f4f6;
        font-family: Arial, sans-serif;
    }

    .full-page-center {
        height: calc(100vh - 80px);
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .card {
        border-radius: 12px;
        width: 380px;
        padding: 30px;
        background-color: #fff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
        opacity: 0;
    }

        .card.fade-in {
            opacity: 1;
        }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
        }

    h3 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 24px;
        color: #007bff;
    }

    .form-control {
        border-radius: 8px;
        padding: 12px;
        margin-bottom: 15px;
        font-size: 16px;
        transition: border-color 0.3s;
    }

        .form-control:focus {
            border-color: #007bff;
            box-shadow: 0 0 8px rgba(0, 123, 255, 0.2);
        }

    .text-danger {
        font-size: 14px;
    }

    .btn-success {
        background-color: #28a745;
        border: none;
        color: white;
        font-weight: 600;
        padding: 10px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-success:hover {
            background-color: #218838;
            transform: scale(1.05);
        }

    .btn-primary {
        background-color: #007bff;
        color: white;
        font-weight: 600;
        padding: 10px;
        transition: all 0.3s ease;
        border-radius: 8px;
    }

        .btn-primary:hover {
            background-color: #0056b3;
            transform: scale(1.05);
        }

    .input-group {
        display: flex;
        align-items: center;
        background-color: #f8f9fa;
        border-radius: 8px;
        padding: 12px;
        border: 1px solid #ced4da;
        transition: border-color 0.3s ease;
    }

        .input-group:hover {
            border-color: #007bff;
        }

        .input-group i {
            color: #6c757d;
            margin-right: 10px;
        }

        .input-group input {
            border: none;
            background: transparent;
            outline: none;
            width: 100%;
            font-size: 1rem;
        }
</style>
