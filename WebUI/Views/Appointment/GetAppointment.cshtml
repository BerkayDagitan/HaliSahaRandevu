@model AppointmentDTO

@{
    ViewData["Title"] = "Randevu Al";
}

<h2>@ViewData["Title"]</h2>

@if (TempData["Success"] != null)
{
    <div class="alert alert-success">@TempData["Success"]</div>
}
else if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<form asp-action="GetAppointment" method="post">
    <div class="form-group">
        <label for="CitysId">Şehir Seçiniz</label>
        <select id="CitysId" name="CitysId" class="form-control" required>
            <option value="">Şehir Seçiniz</option>
            @foreach (var city in ViewBag.Cities)
            {
                <option value="@city.Id" selected="@(city.Id == Model.CitysId)">
                    @city.Name
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="PitchId">Saha Seçiniz</label>
        <select id="PitchId" name="PitchId" class="form-control" required>
            <option value="">Saha Seçiniz</option>
            @foreach (var pitch in ViewBag.Pitches)
            {
                <option value="@pitch.Id" selected="@(pitch.Id == Model.PitchId)">
                    @pitch.Name
                </option>
            }
        </select>
    </div>

    <div class="form-group">
        <label for="Date">Tarih Seçiniz</label>
        <input type="datetime-local" id="Date" name="Date" class="form-control"
               value="@(Model.Date.ToString("yyyy-MM-ddTHH:mm"))" required />
    </div>

    <button type="submit" class="btn btn-primary">Randevu Al</button>
</form>
