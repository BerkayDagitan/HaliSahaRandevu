@{
    Layout = "_Layout";
}

<header>
    <nav class="navbar navbar-expand-lg navbar-light bg-white shadow-sm">
        <div class="container">
            <a class="navbar-brand fw-bold" href="#">💼 Ana Sayfa</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="#">Randevularım</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#">Randevu Al</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link text-danger" href="#">Çıkış Yap</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>
</header>

<main class="container my-5">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <div class="card shadow-lg border-0 rounded-3 p-4">
                <h2 class="text-center mb-4 text-primary">Hoşgeldiniz</h2>
                <p class="text-center mb-4">Ana sayfanızda işlemlerinize devam edebilir veya yeni randevular alabilirsiniz.</p>
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-primary btn-lg mx-2 w-45">Randevularım</button>
                    <button class="btn btn-outline-success btn-lg mx-2 w-45">Randevu Al</button>
                </div>
            </div>
        </div>
    </div>
</main>

<style>
    body {
        background-color: #f9f9f9;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    .navbar {
        border-bottom: 1px solid #e0e0e0;
    }

    .navbar-brand {
        font-size: 1.8rem;
        font-weight: 700;
        color: #007bff;
    }

    .navbar-nav .nav-link {
        font-size: 1.1rem;
        font-weight: 600;
        color: #333;
    }

        .navbar-nav .nav-link:hover {
            color: #007bff;
        }

    .card {
        background-color: #ffffff;
        box-shadow: 0 10px 30px rgba(0, 0, 0, 0.1);
        transition: transform 0.3s ease-in-out, box-shadow 0.3s ease-in-out;
    }

        .card:hover {
            transform: translateY(-5px);
            box-shadow: 0 15px 50px rgba(0, 0, 0, 0.2);
        }

    .text-primary {
        color: #007bff !important;
    }

    .btn-outline-primary, .btn-outline-success {
        font-weight: 600;
        padding: 15px 25px;
        border-radius: 8px;
        font-size: 1.1rem;
        transition: all 0.3s ease;
        border-width: 2px;
    }

        .btn-outline-primary:hover, .btn-outline-success:hover {
            transform: scale(1.05);
        }

    .text-center {
        text-align: center;
    }

    .text-danger {
        color: red;
    }
</style>

<script>
    document.querySelector('.text-danger').addEventListener('click', function() {
        alert('Çıkış yapıldı!');
           window.location.href = '@Url.Action("Login", "LoginPage")';
    });
</script>
